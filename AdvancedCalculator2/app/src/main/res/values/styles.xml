<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Normal Number Buttons -->
    <style name="CalcButton">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>

        <!-- Responsive buttons -->
        <item name="android:layout_rowWeight">1</item>
        <item name="android:layout_columnWeight">1</item>

        <item name="android:background">@drawable/btn_rounded</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">24sp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_margin">6dp</item>
    </style>

    <!-- Operators like + - ร รท -->
    <style name="OperatorButton" parent="CalcButton">
        <item name="android:backgroundTint">#C0DCF4</item>
        <item name="android:textColor">#000000</item>
    </style>

    <!-- Equal Button -->
    <style name="EqualButton" parent="CalcButton">
        <item name="android:backgroundTint">#BFDE9A</item>
        <item name="android:textColor">#000000</item>
    </style>

    <!-- Clear Button (C) -->
    <style name="ClearButton" parent="CalcButton">
        <item name="android:backgroundTint">#FF8A8A</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>

</resources>
